#!/usr/bin/env node
const program = require('commander')

const Module = require('../dist/add/module').default

program
  .option('-P, --path', '子功能模块路径')
  .parse(process.argv)

const { child } = program

const args = program.args

const ifModule = args[0] === 'module';

if (ifModule) {
  console.log(args);
  // 1、判断是否为添加block
  // 2、判断是否有blockName
  const newModule = new Module({
    moduleName: args[1],
    childName: child
  });
  newModule.start();
}

